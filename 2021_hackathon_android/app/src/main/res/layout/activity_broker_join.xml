<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".BrokerJoinActivity">

    <ImageView
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:src="@drawable/appicon"/>

    <EditText
        android:id="@+id/Bjoin_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="ID"
        android:backgroundTint="@color/yellow1"/>

    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/BJoin_pw_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="@color/yellow1"
        android:inputType="textPassword"
        android:hint="Password" />

    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/BJoin_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="@color/yellow1"
        android:inputType="text"
        android:hint="부동산 이름" />

    <EditText
        android:backgroundTint="@color/yellow1"
        android:id="@+id/BJoin_phone_txt"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="부동산 전화번호" />

    <Button
            android:id="@+id/BJoin_btn"
            android:layout_marginTop="50dp"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:background="@drawable/button_style1"/>

    <TextView
            android:backgroundTint="@color/yellow1"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부동산 주소"/>

    <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Spinner
                android:id="@+id/join_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/join_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>